##############################################################################
# Add Winner "Tag":
##############################################################################
tag @s add us_winner

##############################################################################
# Display Winner in chat!
##############################################################################
tellraw @a [{"text": "[", "color": "green"}, {"text": "Unscramble", "color":"green"}, {"text": "] ", "color": "green"}, {"text":"Congratulations ", "color": "#45A5A6"}, {"selector":"@a[tag=us_winner]", "color": "red"}, {"text":"!", "color": "#45A5A6"}]

##############################################################################
# Grant Winner Prize!
##############################################################################
give @s[tag=us_winner] minecraft:diamond 1

##############################################################################
# Remove Tags:
##############################################################################
tag @s remove us_winner

##############################################################################
# Reset Command!
##############################################################################
scoreboard players set @s[scores={us_claim=1..}] us_claim 0